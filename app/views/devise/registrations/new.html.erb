<% title 'Register' %>
<% noindex %>
<div class="container">
<div class="col-md-6 col-md-offset-3 panel panel-default margin-top-40">
  <div class="panel-body">
    <div class="section-divider">
      <h1>Sign Up</h1>
      <p class="sub-head">Already have an account? Click here to <%= link_to "log in", new_user_session_path %>.</p>
    </div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :first_name, required: true, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :last_name, required: true, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :gender, required: true, input_html: {class: "form-control input-sm"} %>
  </div>
  <br>
  <div class="form-group">
    <%= f.input :email, required: true, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :password, required: true, input_html: {class: "form-control input-sm"} %>
    <small><%= @minimum_password_length %> characters minimum</small>
  </div>

  <div class="form-group">
    <%= f.input :password_confirmation, required: true, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.input :username, required: true, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

</div>
</div>
</div>